{
  "manifest_version": 3,
  "name": "example-plugin",
  "description": "example plugin",
  "version": "1.0",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "options_page": "ui/options/options.html",
  "action": {
    "default_icon": "icons/icon-16.png",
    "default_title": "action title",
    "default_popup": "ui/popup/popup.html"
  },
  "side_panel": {
    "default_path": "ui/side-panel/side-panel.html"
  },
  "chrome_url_overrides": {},
  "commands": {
    "example-cmd": {
      "suggested_key": { "default": "Ctrl+Shift+X" },
      "description": "example description"
    }
  },
  "omnibox": { "keyword" : "test" },

  "permissions": [
    "sidePanel", "contextMenus", "notifications",
    "storage", "cookie"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "content_scripts": [
    {
      "css": ["scripts/css/content-script.css"],
      "js": ["scripts/content-script.js"],
      "matches": ["*://*/*"],
      "exclude_matches": [],
      "run_at": "document_idle",
      "world": "ISOLATED"
    }
  ],
  "background": {
    "service_worker": "scripts/service-worker.js"
  }
}